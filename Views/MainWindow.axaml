<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

        xmlns:vm="using:ava_demo_new.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ava_demo_new.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="{Binding WindowTitle}"
        Width="1200"
        Height="700"
        MinWidth="800"
        MinHeight="600"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal">

    <Window.Styles>
        <!-- 引用外部样式文件 -->
        <StyleInclude Source="avares://ava-demo-new/Styles/ButtonStyles.axaml" />
    </Window.Styles>

    <Grid>
        <!-- 定义两行：第一行占15%，第二行占85% -->
        <Grid.RowDefinitions>
            <RowDefinition Height="15*" />  <!-- 第一行：约15% 高度 -->
            <RowDefinition Height="85*" />  <!-- 第二行：约85% 高度 -->
        </Grid.RowDefinitions>

        <!-- ===================== 第一行：左中右三块（10% | 80% | 10%）===================== -->
        <Grid Grid.Row="0">
            <!-- 水平三列：10% | 80% | 10% -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="80*" />
                <ColumnDefinition Width="10*" />
            </Grid.ColumnDefinitions>

            <!-- 左侧模块 -->
            <!-- Command="{Binding MyCustomButtonClickCommand}" -->
            <Border Grid.Column="0" Background="Transparent" Margin="0">
                <Button Click="homeClick" Classes="MyCustomButton"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Command="{Binding MyCustomButtonClickCommand}">

                    <!-- 按钮的内容：可以放图片、文字，或 StackPanel 组合 -->
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/Assets/home.png"
                               Width="100"
                               Height="100"
                               Stretch="Uniform" />
                        <!-- <TextBlock Text="按钮" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0" /> -->
                    </StackPanel>
                </Button>
            </Border>


            <!-- 中间模块 -->
            <Border Grid.Column="1" Background="LightGreen" Margin="0">
                <Grid>
                    <!-- 定义两行：第一行（上半部分）、第二行（下半部分） -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />   <!-- 第一行，比如占 50% 或自动 -->
                        <RowDefinition Height="*" />   <!-- 第二行，比如占 50% 或自动 -->
                    </Grid.RowDefinitions>

                    <!-- ===================== 第一行：占满宽度，高度自适应 ===================== -->
                    <!-- 第一行：15个小模块，横向排列 -->
                    <Grid Grid.Row="0">
                        <!-- 横向 15 列，每列等宽 -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" /> <!-- 模块 1 -->
                            <ColumnDefinition Width="1.5*" />  <!-- 模块 2 -->
                            <ColumnDefinition Width="*" />  <!-- 模块 3 -->
                            <ColumnDefinition Width="*" />  <!-- 模块 4 -->
                            <ColumnDefinition Width="*" />  <!-- 模块 5 -->
                            <ColumnDefinition Width="*" />  <!-- 模块 6 -->
                            <ColumnDefinition Width="*" />  <!-- 模块 7 -->
                            <ColumnDefinition Width="*" />  <!-- 模块 8 -->
                            <ColumnDefinition Width="1.5*" />  <!-- 模块 9 -->
                            <ColumnDefinition Width="1.5*" />  <!-- 模块 10 -->
                            <ColumnDefinition Width="2*" />  <!-- 模块 11 -->
                            <ColumnDefinition Width="1.5*" />  <!-- 模块 12 -->
                            <ColumnDefinition Width="2*" />  <!-- 模块 13 -->
                            <ColumnDefinition Width="2*" />  <!-- 模块 14 -->
                            <ColumnDefinition Width="*" />  <!-- 模块 15 -->
                        </Grid.ColumnDefinitions>

                        <!-- 15 个模块，每个占一列 -->
                        <Border Grid.Column="0" Background="LightCyan">
                            <!-- <Button Classes="MyCustomButton" -->
                            <!--         HorizontalAlignment="Center" -->
                            <!--         VerticalAlignment="Center" -->
                            <!--         Width="80" -->
                            <!--         Height="80" -->
                            <!--        Click="PcClick" -->
                            <!-- > -->
                            <!-- 按钮的内容：可以放图片、文字，或 StackPanel 组合 -->
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Image Source="/Assets/home.png"
                                       Width="32"
                                       Height="32"
                                       Stretch="Uniform"
                                       PointerPressed="PcClick" />
                                <TextBlock x:Name="ButtonText" Text="按钮" FontSize="10" HorizontalAlignment="Center"
                                           Margin="0,4,0,0" />
                            </StackPanel>
                            <!-- </Button> -->


                            <!-- <TextBlock Text="1" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center" /> -->
                        </Border>
                        <Border Grid.Column="1" Background="LightYellow">
                            <TextBlock Text="2" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <Border Grid.Column="2" Background="LightSalmon">
                            <Button
                                BorderThickness="0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Classes="MyCustomButton"
                                Click="treeClick">
                                <TextBlock Text="Tree" FontSize="10" HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                            </Button>

                        </Border>
                        <Border Grid.Column="3" Background="MistyRose">
                            <TextBlock Text="4" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <Border Grid.Column="4" Background="Lavender">
                            <TextBlock Text="5" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <Border Grid.Column="5" Background="Honeydew">
                            <TextBlock Text="6" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <Border Grid.Column="6" Background="LightBlue">
                            <TextBlock Text="7" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <Border Grid.Column="7" Background="Pink">
                            <TextBlock Text="8" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <Border Grid.Column="8" Background="Khaki">
                            <TextBlock Text="9" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <Border Grid.Column="9" Background="PaleGreen">
                            <TextBlock Text="10" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <Border Grid.Column="10" Background="Thistle">
                            <TextBlock Text="11" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <Border Grid.Column="11" Background="Tan">
                            <TextBlock Text="12" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <Border Grid.Column="12" Background="Wheat">
                            <TextBlock Text="NullTool" FontSize="10" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Border>
                        <Border Grid.Column="13" Background="Plum">
                            <TextBlock Text="World" FontSize="10" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Border>
                        <Border Grid.Column="14" Background="LightGoldenrodYellow">
                            <Button
                                BorderThickness="0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Classes="MyCustomButton"
                                Click="ShowCustomDialog">
                                <Image Source="/Assets/home.png"
                                       Width="32"
                                       Height="32"
                                       Stretch="Uniform" />
                            </Button>
                        </Border>
                    </Grid>

                    <!-- ===================== 第二行：分为左右两列（左85% | 右15%） ===================== -->
                    <Grid Grid.Row="1">
                        <!-- 横向两个列：左 85% | 右 15% -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="85*" />  <!-- 左侧占 85% 宽度 -->
                            <ColumnDefinition Width="15*" />  <!-- 右侧占 15% 宽度 -->
                        </Grid.ColumnDefinitions>

                        <!-- 左列模块 (85%) -->
                        <Border Grid.Column="0" Background="Orange">
                            <TextBlock Text="预警信息"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="14" />
                        </Border>

                        <!-- 右列模块 (15%) -->
                        <Border Grid.Column="1" Background="LightCoral">
                            <TextBlock Text="右模块 (15%)"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="14" />
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- 右侧模块 -->
            <Border Grid.Column="2" Background="Purple" Margin="0">
                <TextBlock Text="右侧 10%"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="16" />
            </Border>
        </Grid>


        <!-- ===================== 第二行：剩余 85% 区域（左90% | 右10%） ==================== -->


        <Grid Grid.Row="1">
            <!-- 定义两列：左侧 90% | 右侧 10% -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="95*" />  <!-- 左侧占 90% 宽度 -->
                <ColumnDefinition Width="5*" />  <!-- 右侧占 10% 宽度 -->
            </Grid.ColumnDefinitions>

            <!-- 左侧模块 (90%) -->

            <Border Grid.Column="0">
                <Grid>
                    <!-- 定义三行，高度按比例分配 -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="85*" />  <!-- 第一行：85% -->
                        <RowDefinition Height="5*" />  <!-- 第二行：5% -->
                        <RowDefinition Height="10*" /> <!-- 第三行：15% -->
                    </Grid.RowDefinitions>


                    <!-- ===================== 第一行：85% 高度 → 横向 3 列 (75% | 15% | 10%) ===================== -->
                    <ContentControl Grid.Column="0" Grid.ColumnSpan="3" Name="MainContent" Background="White">
                        <Grid Margin="10">
                            <!-- 调整为3行5列，但行高和列宽要更合理分配 -->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />  <!-- 第一行稍高一些 -->
                                <RowDefinition Height="*" />     <!-- 第二行 -->
                                <RowDefinition Height="*" />     <!-- 第三行 -->
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- 第一行 -->
                            <Button Grid.Row="0" Grid.Column="0"
                                    Classes="FunctionButton"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Margin="8"
                                    Click="codeClick">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <Border BorderBrush="#E0E0E0" BorderThickness="2"
                                            CornerRadius="8" Background="White"
                                            Width="80" Height="80"
                                            Margin="0,0,0,12">      <!-- 增加文字间距 -->
                                        <Image Source="/Assets/home.png"
                                               Width="48" Height="48"
                                               Stretch="Uniform" />
                                    </Border>
                                    <TextBlock Text="用户登录"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               Foreground="#333333" />
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="0" Grid.Column="1"
                                    Classes="FunctionButton"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Margin="8"
                                    Click="settingClick">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <Border BorderBrush="#E0E0E0" BorderThickness="2"
                                            CornerRadius="8" Background="White"
                                            Width="80" Height="80"
                                            Margin="0,0,0,12">
                                        <Image Source="/Assets/home.png"
                                               Width="48" Height="48"
                                               Stretch="Uniform" />
                                    </Border>
                                    <TextBlock Text="工程管理"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               Foreground="#333333" />
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="0" Grid.Column="2"
                                    Classes="FunctionButton"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Margin="8"
                                    Click="codeClick">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <Border BorderBrush="#E0E0E0" BorderThickness="2"
                                            CornerRadius="8" Background="White"
                                            Width="80" Height="80"
                                            Margin="0,0,0,12">
                                        <Image Source="/Assets/home.png"
                                               Width="48" Height="48"
                                               Stretch="Uniform" />
                                    </Border>
                                    <TextBlock Text="程序编辑"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               Foreground="#333333" />
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="0" Grid.Column="3"
                                    Classes="FunctionButton"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Margin="8"
                                    Click="codeClick">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <Border BorderBrush="#E0E0E0" BorderThickness="2"
                                            CornerRadius="8" Background="White"
                                            Width="80" Height="80"
                                            Margin="0,0,0,12">
                                        <Image Source="/Assets/home.png"
                                               Width="48" Height="48"
                                               Stretch="Uniform" />
                                    </Border>
                                    <TextBlock Text="程序数据"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               Foreground="#333333" />
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="0" Grid.Column="4"
                                    Classes="FunctionButton"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Margin="8"
                                    Click="codeClick">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <Border BorderBrush="#E0E0E0" BorderThickness="2"
                                            CornerRadius="8" Background="White"
                                            Width="80" Height="80"
                                            Margin="0,0,0,12">
                                        <Image Source="/Assets/home.png"
                                               Width="48" Height="48"
                                               Stretch="Uniform" />
                                    </Border>
                                    <TextBlock Text="IO检测"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               Foreground="#333333" />
                                </StackPanel>
                            </Button>

                            <!-- 第二行 -->
                            <Button Grid.Row="1" Grid.Column="0"
                                    Classes="FunctionButton"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Margin="8"
                                    Click="codeClick">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <Border BorderBrush="#E0E0E0" BorderThickness="2"
                                            CornerRadius="8" Background="White"
                                            Width="80" Height="80"
                                            Margin="0,0,0,12">
                                        <Image Source="/Assets/home.png"
                                               Width="48" Height="48"
                                               Stretch="Uniform" />
                                    </Border>
                                    <TextBlock Text="点动管理"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               Foreground="#333333" />
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="1" Grid.Column="1"
                                    Classes="FunctionButton"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Margin="8"
                                    Click="codeClick">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <Border BorderBrush="#E0E0E0" BorderThickness="2"
                                            CornerRadius="8" Background="White"
                                            Width="80" Height="80"
                                            Margin="0,0,0,12">
                                        <Image Source="/Assets/home.png"
                                               Width="48" Height="48"
                                               Stretch="Uniform" />
                                    </Border>
                                    <TextBlock Text="日志管理"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               Foreground="#333333" />
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="1" Grid.Column="2"
                                    Classes="FunctionButton"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Margin="8"
                                    Click="codeClick">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <Border BorderBrush="#E0E0E0" BorderThickness="2"
                                            CornerRadius="8" Background="White"
                                            Width="80" Height="80"
                                            Margin="0,0,0,12">
                                        <Image Source="/Assets/home.png"
                                               Width="48" Height="48"
                                               Stretch="Uniform" />
                                    </Border>
                                    <TextBlock Text="通用设置"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               Foreground="#333333" />
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="1" Grid.Column="3"
                                    Classes="FunctionButton"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Margin="8"
                                    Click="codeClick">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <Border BorderBrush="#E0E0E0" BorderThickness="2"
                                            CornerRadius="8" Background="White"
                                            Width="80" Height="80"
                                            Margin="0,0,0,12">
                                        <Image Source="/Assets/home.png"
                                               Width="48" Height="48"
                                               Stretch="Uniform" />
                                    </Border>
                                    <TextBlock Text="高级设置"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               Foreground="#333333" />
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="1" Grid.Column="4"
                                    Classes="FunctionButton"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Margin="8"
                                    Click="codeClick">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <Border BorderBrush="#E0E0E0" BorderThickness="2"
                                            CornerRadius="8" Background="White"
                                            Width="80" Height="80"
                                            Margin="0,0,0,12">
                                        <Image Source="/Assets/home.png"
                                               Width="48" Height="48"
                                               Stretch="Uniform" />
                                    </Border>
                                    <TextBlock Text="用户应用"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               Foreground="#333333" />
                                </StackPanel>
                            </Button>

                            <!-- 第三行 -->
                            <Button Grid.Row="2" Grid.Column="0"
                                    Classes="FunctionButton"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Margin="8"
                                    Click="codeClick">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <Border BorderBrush="#E0E0E0" BorderThickness="2"
                                            CornerRadius="8" Background="White"
                                            Width="80" Height="80"
                                            Margin="0,0,0,12">
                                        <Image Source="/Assets/home.png"
                                               Width="48" Height="48"
                                               Stretch="Uniform" />
                                    </Border>
                                    <TextBlock Text="机器人点位"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               Foreground="#333333" />
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="2" Grid.Column="1"
                                    Classes="FunctionButton"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Margin="8"
                                    Click="codeClick">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <Border BorderBrush="#E0E0E0" BorderThickness="2"
                                            CornerRadius="8" Background="White"
                                            Width="80" Height="80"
                                            Margin="0,0,0,12">
                                        <Image Source="/Assets/home.png"
                                               Width="48" Height="48"
                                               Stretch="Uniform" />
                                    </Border>
                                    <TextBlock Text="用户坐标系"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               Foreground="#333333" />
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="2" Grid.Column="2"
                                    Classes="FunctionButton"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Margin="8"
                                    Click="codeClick">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <Border BorderBrush="#E0E0E0" BorderThickness="2"
                                            CornerRadius="8" Background="White"
                                            Width="80" Height="80"
                                            Margin="0,0,0,12">
                                        <Image Source="/Assets/home.png"
                                               Width="48" Height="48"
                                               Stretch="Uniform" />
                                    </Border>
                                    <TextBlock Text="工具坐标系"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               Foreground="#333333" />
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="2" Grid.Column="3"
                                    Classes="FunctionButton"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Margin="8"
                                    Click="codeClick">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <Border BorderBrush="#E0E0E0" BorderThickness="2"
                                            CornerRadius="8" Background="White"
                                            Width="80" Height="80"
                                            Margin="0,0,0,12">
                                        <Image Source="/Assets/home.png"
                                               Width="48" Height="48"
                                               Stretch="Uniform" />
                                    </Border>
                                    <TextBlock Text="状态监视"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               Foreground="#333333" />
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="2" Grid.Column="4"
                                    Classes="FunctionButton"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Margin="8"
                                    Click="robotClick">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <Border BorderBrush="#E0E0E0" BorderThickness="2"
                                            CornerRadius="8" Background="White"
                                            Width="80" Height="80"
                                            Margin="0,0,0,12">
                                        <Image Source="/Assets/home.png"
                                               Width="48" Height="48"
                                               Stretch="Uniform" />
                                    </Border>
                                    <TextBlock Text="机械臂"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               Foreground="#333333" />
                                </StackPanel>
                            </Button>
                        </Grid>
                    </ContentControl>
                    <!-- ===================== 第二行：5% 高度 → 横向 3 个模块 ===================== -->
                    <Grid Grid.Row="1">
                        <!-- 横向 3 列，等宽 -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- 3 个小模块，横向排列 -->
                        <Border Grid.Column="0" Background="Orange">
                            <TextBlock Text="模块 2-1" FontSize="10" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Border>
                        <Border Grid.Column="1" Background="LightCoral">
                            <TextBlock Text="模块 2-2" FontSize="10" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Border>
                        <Border Grid.Column="2" Background="Gold">
                            <TextBlock Text="模块 2-3" FontSize="10" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Border>
                    </Grid>

                    <!-- ===================== 第三行：15% 高度 → 横向 7 个模块 ===================== -->
                    <Grid Grid.Row="2">
                        <!-- 横向 7 列，等宽 -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- 7 个小模块，横向排列 -->
                        <Border Grid.Column="0" Background="LightGreen">
                            <TextBlock Text="模块 3-1" FontSize="10" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Border>
                        <Border Grid.Column="1" Background="LightSkyBlue">
                            <TextBlock Text="模块 3-2" FontSize="10" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Border>
                        <Border Grid.Column="2" Background="MistyRose">
                            <TextBlock Text="模块 3-3" FontSize="10" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Border>
