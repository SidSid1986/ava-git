<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ava_demo_new.Views.TreePage"
             Width="800" Height="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <!-- TreeView 区域 -->
        <Border Grid.Column="0" Margin="20" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 标题 -->
                <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                    <TextBlock Text="设备树形结构" FontSize="18" FontWeight="Bold" 
                              Padding="15,10" Foreground="#333333"/>

                </Border>
                
                <!-- TreeView -->
                <TreeView Grid.Row="1" x:Name="DeviceTreeView" Padding="10">
                    <TreeView.Styles>
                        <Style Selector="TreeViewItem">
                            <Setter Property="Padding" Value="8,4"/>
                            <Setter Property="FontSize" Value="14"/>
                        </Style>
                    </TreeView.Styles>
                </TreeView>
            </Grid>
        </Border>
        
        <!-- 右侧操作区域 -->
        <StackPanel Grid.Column="1"
                    Width="260" Margin="0,20,20,20" Spacing="15">
            <TextBlock Text="树形页面" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="使用 TreeView 展示设备层次结构" FontSize="14" TextWrapping="Wrap"/>
            
            <Button Content="刷新数据" Click="RefreshButton_Click" 
                    Background="#007BFF" Foreground="White" 
                    Padding="15,8" FontSize="14"/>
                    
            <Button Content="展开全部" Click="ExpandAllButton_Click" 
                    Background="#28A745" Foreground="White" 
                    Padding="15,8" FontSize="14"/>
                    
            <Button Content="折叠全部" Click="CollapseAllButton_Click" 
                    Background="#FFC107" Foreground="Black" 
                    Padding="15,8" FontSize="14"/>
            
            <Button Content="返回主页" Click="BackButton_Click" 
                    Background="#6C757D" Foreground="White" 
                    Padding="15,8" FontSize="14"/>
        </StackPanel>
    </Grid>
</UserControl>